{
    "name": "karakuri",
    "scripts": {
        "build": "npm run build:dev",
        "build:dev": "npm run clean && tsc --build tsconfig.build.dev.json",
        "build:prod": "npm run clean && tsc --build tsconfig.build.prod.json",
        "compile-check": "tsc --noEmit",
        "test": "jest -c=./tests/jest.config.js --force-exit --pass-with-no-tests",
        "clean": "rm -rf ./build"
    },
    "type": "module",
    "private": false,
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "exports": {
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "engineStrict": true,
    "author": "WI",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/IrvingWash/karakuri.git"
    },
    "homepage": "https://github.com/IrvingWash/karakuri",
    "readme": "https://github.com/IrvingWash/karakuri/README.md",
    "bugs": {
        "url": "https://github.com/IrvingWash/karakuri/issues"
    },
    "description": "2D game engine",
    "keywords": [
        "engine",
        "game engine",
        "game",
        "video game",
        "webgpu"
    ],
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@stylistic/eslint-plugin": "^1.5.0",
        "@typescript-eslint/eslint-plugin": "^6.13.2",
        "@typescript-eslint/parser": "^6.13.2",
        "eslint": "^8.55.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-optional-params": "^0.0.5",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3"
    }
}
