{
    "name": "karakuri",
    "scripts": {
        "build": "npm run build:dev",
        "build:dev": "npm run clean && tsc --build tsconfig.build.dev.json",
        "build:prod": "npm run clean && tsc --build tsconfig.build.prod.json",
        "clean": "rm -rf ./build",
        "compile-check": "tsc --noEmit"
    },
    "private": false,
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "exports": {
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "engineStrict": true,
    "author": "WI",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/IrvingWash/karakuri.git"
    },
    "homepage": "https://github.com/IrvingWash/karakuri",
    "readme": "https://github.com/IrvingWash/karakuri/README.md",
    "bugs": {
        "url": "https://github.com/IrvingWash/karakuri/issues"
    },
    "description": "2D game engine",
    "keywords": [
        "engine",
        "game engine",
        "game",
        "video game",
        "webgpu"
    ],
    "devDependencies": {
        "typescript": "^5.3.3"
    }
}
